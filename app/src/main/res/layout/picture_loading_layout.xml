<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:layout_margin="@dimen/dimen_12"
    android:background="@drawable/bg_rounded_8dp"
    android:foreground="@drawable/ripple_for_bg_rounded_8_dp"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgLoading"
        style="@style/pictures"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tvLabelAuthorLoading"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginHorizontal="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_24"
        android:background="@drawable/bg_rounded_grey_12dp"
        app:layout_constraintEnd_toEndOf="@+id/tvAuthorLoading"
        app:layout_constraintStart_toEndOf="@+id/imgLoading"
        app:layout_constraintStart_toStartOf="@+id/tvAuthorLoading"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tvAuthorLoading"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginBottom="@dimen/dimen_24"
        android:layout_marginHorizontal="@dimen/dimen_60"
        android:layout_marginTop="@dimen/dimen_4"
        android:background="@drawable/bg_rounded_grey_12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgLoading"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelAuthorLoading" />

</androidx.constraintlayout.widget.ConstraintLayout>